[user]
	name = jrobhoward
	email = jrobhoward@gmail.com
[alias]
	b = branch
	c = checkout
	d = difftool -M
	ds = diff --name-status --oneline -M
	lgad = log --pretty=format:"%h%x09%an%x09%ad%x09%s"
	m = merge
	p = pull --rebase
	cleanrepo = clean -f -d
	reallycleanrepo = clean -f -d -x
	resethead = reset --hard HEAD
	x = difftool -M
	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg = !"git lg1"
	tagdates = log --tags --simplify-by-decoration --pretty='format:%ai %d'
[color]
	diff = true
	branch = true
	interactive = true
	status = true
[color "diff"]
	whitespace = red reverse
[core]
	editor = vim
	whitespace = cr-at-eol
	packedGitLimit = 128m
	packedGitWindowSize = 128m
[pack]
	deltaCacheSize = 128m
	packSizeLimit = 128m
	windowMemory = 128m
[rebase]
	stat = true
[push]
	default = simple
